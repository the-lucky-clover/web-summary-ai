{
  "manifest_version": 2,
  "name": "Web Summary AI",
  "version": "1.0.0",
  "description": "Web Summary AI can help you summarize or chat with websites and YouTube videos. #AI Summary #AI Summarizer #PDF Summary #Document Reader #Text Summarizer #Web Summary #Web Summarizer #Smart Reader",
  "author": "Web Summary AI Team",
  
  "permissions": [
    "activeTab",
    "storage",
    "*://*.youtube.com/*",
    "*://*.chat.openai.com/*",
    "*://*.chatgpt.com/*"
  ],
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Summary AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["assets/history-manager.js", "content/content.js"],
      "css": ["content/content.css", "content/content-enhanced.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": ["content/youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.chat.openai.com/*"
      ],
      "js": ["content/chatgpt-extractor.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "assets/*",
    "content/summarize-panel.html",
    "ai-provider.js"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "websummaryai@websummaryai.com",
      "strict_min_version": "109.0"
    }
  }
}
